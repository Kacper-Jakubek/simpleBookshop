<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="init-db-20201215" author="Irek Marszałek">
        <createTable tableName="category">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="parentCategory" type="BIGINT">
                <constraints foreignKeyName="to_category" referencedColumnNames="id" referencedTableName="category"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="category-table-modify" author="Irek Marszałek">
        <addColumn tableName="category">
            <column afterColumn="parentCategory" name="leaf" type="BIT">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="category-table-modify2" author="Irek Marszałek">
        <renameColumn columnDataType="BIGINT" tableName="category" oldColumnName="parentCategory" newColumnName="parent_category_id"/>
    </changeSet>

	<changeSet id="init-db-20201217" author="Ania L-O">
		<createTable tableName="author">
			<column autoIncrement="true" name="id" type="BIGINT">
				<constraints primaryKey="true"/>
			</column>
			<column name="AuthorsFname" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="AuthorLname" type="VARCHAR(255)">
				 <constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

    <changeSet id="author-table-modify" author="Irek Marszałek">
        <renameColumn columnDataType="VARCHAR(255)" tableName="author" oldColumnName="AuthorsFname" newColumnName="firstName"/>
        <renameColumn columnDataType="VARCHAR(255)" tableName="author" oldColumnName="AuthorLname" newColumnName="lastName"/>
    </changeSet>
    <changeSet id="author-table-modify2" author="Irek Marszałek">
        <renameColumn columnDataType="VARCHAR(255)" tableName="author" oldColumnName="firstName" newColumnName="first_name"/>
        <renameColumn columnDataType="VARCHAR(255)" tableName="author" oldColumnName="lastName" newColumnName="last_name"/>
    </changeSet>

    <changeSet id="init-db-20201222" author="Pamela Kwiatkowska">
        <createTable tableName="product">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_title" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="product_description" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="product_miniature" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_price" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="product_availability" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
            <column name="product_categories" type="BIGINT">
                <constraints foreignKeyName="to_category" referencedColumnNames="id" referencedTableName="category"/>
            </column>
            <column name="product_authors" type="BIGINT">
                <constraints foreignKeyName="to_author" referencedColumnNames="id" referencedTableName="author"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="author-table-modify" author="Marcin Marczyk">
        <createTable tableName="category_to_product">
            <column name="category_id" type="BIGINT">
                <constraints foreignKeyName="to_category" referencedColumnNames="id" referencedTableName="category" />
            </column>
            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="to_product" referencedColumnNames="id" referencedTableName="product" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
